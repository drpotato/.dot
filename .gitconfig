[core]
	excludesfile = /Users/cmorgan/.gitignore_global
    editor = vim
	pager = less -F -X
[user]
    email = cmorgan@atlassian.com
    name = Chris Morgan
[color]
    ui = auto
[log]
    decorate = full
[push]
    default = simple
[pull]
    default = simple
[alias]
    fuck = reset --hard HEAD
    plog = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    tree = forest --pretty=format:\"%C(red)%h %C(magenta)(%ar) %C(blue)%an %C(reset)%s\" --style=15
    newpush = !git push origin -u --set-upstream "$(git rev-parse --abbrev-ref HEAD)"
[credential]
    helper = osxkeychain
[merge]
    tool = vimdiff
    conflictstyle = diff3
    prompt = false
[mergetool "vimdiff"]
    keepBackup = false
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[rebase]
	autostash = true
[rerere]
	enabled = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
